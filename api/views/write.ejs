  <body>
  <h1> Write a letter!</h1>
    <!-- Include stylesheet -->
        <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

        <!-- Create the editor container -->
        <form action="/letters/write" method="POST" id="identifier">

            <div id="editor" style="height: 50%;"></div>
            <input type="hidden" id="jsonform" name="text" value="">
            <!--<input type="hidden" id="username" name="user" value=user.name>-->
            <button class="btn btn-primary" onclick="submitform()">Submit your letter!</button>
        </form>

        <!-- Include the Quill library -->
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
        <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
        <!-- Initialize Quill editor -->
        <script>
            var quill = new Quill('#editor', {
                modules: {
                toolbar: [
                    [{ header: [1, 2, false] }],
                    ['bold', 'italic', 'underline'],
                    ]
                },
                placeholder: 'Begin writing here!',
                theme: 'snow'
            });
            
            

            let submitform = function() {
            // Populate hidden form on submit
    
                console.log("Submitted");
                
                document.getElementById("jsonform").value = JSON.stringify(quill.getContents());
                document.getElementById("identifier").submit();
            };
            
        </script>
  </body>
</html>
